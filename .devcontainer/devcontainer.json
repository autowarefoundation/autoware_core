{
    "name": "Autoware Core Development",
    "image": "ghcr.io/autowarefoundation/autoware:core-common-devel",
    "runArgs": [
        "--net=host",
        "--privileged"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/autoware/src/core/autoware_core,type=bind"
    ],
    "containerEnv": {
        "ROS_DOMAIN_ID": "${localEnv:ROS_DOMAIN_ID:0}"
    },
    "postCreateCommand": "mkdir -p /autoware/src && chmod -R 777 /autoware",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "redhat.vscode-yaml",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-iot.vscode-ros"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    }
}